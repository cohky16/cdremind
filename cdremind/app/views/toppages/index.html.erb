<% content_for :cover do %>
  <div class="cover">
    <div class="cover-inner">
      <div class="cover-contents">
        <h1>CD発売日リマインドサービス</h1>
         <% if logged_in? %>
        <div class="search">
          <div class="row">
            <div class="text-center">
              <%= form_tag(new_item_path, method: :get, class: 'form-inline') do %>
                <div class="form-group">
                  <%= text_field_tag :artistName, @artistName, class: 'form-control input-lg', placeholder: "アーティスト名を入力", size: 40 %>
                </div>
                  <%= submit_tag '検索', class: 'btn btn-success brn-lg' %>
              <% end %>
              </div>
            </div>
          </div>
          <% else %>
          <%= link_to '登録', signup_path, class: 'btn btn-success btn-lg' %>
        <% end %>
      </div>
    </div>
  </div>
  <% if logged_in? %>
    <h1 class="text-center"><span class="glyphicon glyphicon-tower"></span>　ランキング　<span class="glyphicon glyphicon-tower"></span></h1>
  <% end %>
<% end %>

