<% if items %>
  <div class="row">
    <% items.each do |item| %>
    <% if item.availability == '5' %>
      <div class="item">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <img src="<%= item.image_url %>" alt="" >
            </div>
            <div class="panel-body">
              <p class="item-sales"><%= item.sales_date%></p>
              <p class="item-title"><%= link_to item.title, item.item_url,target: "blank" %></p>
              <p class="item-artist"><%= item.artist_name %></p>
              <% if logged_in?%>
                <%= render 'relationships/remind_button', item: item %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% else %>
      <div class="item">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <img src="<%= item.image_url %>" alt="" >
            </div>
            <div class="panel-body">
              <p class="item-sales"><%= item.sales_date%></p>
              <p class="item-title"><%= link_to item.title, item.item_url,target: "blank" %></p>
              <p class="item-artist"><%= item.artist_name %></p>
              <!--<%= link_to 'Remind', test_path, id: 'remindbtn', class: 'btn btn-primary btn-s'%>-->
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <% end %>
  </div>
<% end %>