<h1 class="text-center">リマインドランキング</h1>
<% if @items.present? %>
  <div class="row">
    <% @items.each_with_index do |item, index| %>
      <div class="item">
        <div class="col-md-3 col-sm-4 col-xs-12">
          <div class="panel panel-default">
            <div class="panel-heading text-center">
              <img src="<%= item.image_url %>" alt="" >
            </div>
            <div class="panel-body">
              <p class="item-sales"><%= item.sales_date %></p>
              <p class="item-title"><%= link_to item.title, item.item_url,target: "blank" %></p>
              <p class="item-artist"><%= item.artist_name %></p>
              <div class="buttons text-center">
                <% if logged_in? %>
                  <%= render 'relationships/remind_button', item: item %>
                <% end %>
              </div>
            </div>
            <div class="panel-footer">
              <p class="text-center"><%= index+1 %>位: <%= @ranking_counts[item.id] %> Reminds</p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>