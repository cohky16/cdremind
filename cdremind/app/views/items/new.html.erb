<div class="search">
  <div class="row">
    <div class="text-center">
      <%= form_tag(new_item_path, method: :get, class: 'form-inline') do %>
        <div class="form-group">
          <%= text_field_tag :artistName, @artistName, class: 'form-control input-lg', placeholder: "アーティスト名を入力", size: 40 %>
        </div>
        <%= submit_tag '検索', class: 'btn btn-success brn-lg' %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'items', items: @items %>